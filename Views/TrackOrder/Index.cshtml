                @*             <button type="submit" class="btn btn-success">Duyệt</button> *@
                @*         </form> *@
                @*     } *@
                @*     else *@
                @*     { *@
                @*         <span>Đã duyệt</span> *@
                @*     } *@
                @* </td> *@
                <!-- Changed OrderStatus to Status -->
            </tr>
        }
    </tbody>
