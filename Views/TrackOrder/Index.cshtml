@model List<FoodOrderSystem.DTOs.OrderDTO>

<h2>Danh sách đơn hàng</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            @* <th>Duyệt</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalPrice.ToString("N0") VND</td>
                <td>@(order.StatusOrder == 1 ? "Đã duyệt" : "Chưa duyệt")</td>
